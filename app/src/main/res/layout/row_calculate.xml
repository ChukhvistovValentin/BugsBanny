<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:filterTouchesWhenObscured="false"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_calculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:paddingTop="5dp"
            android:src="@drawable/other" />

        <TextView
            android:id="@+id/text_calc_summ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="right"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="0.00"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_calc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/text_calc_summ"
            android:layout_toRightOf="@+id/icon_calculator"
            android:layout_toStartOf="@+id/text_calc_summ"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:textColor="@android:color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/text_calc_summ"
            android:layout_alignRight="@+id/text_calc_summ"
            android:layout_below="@+id/text_calc_summ"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:text="@string/grn"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12dp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>