<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:theme="@android:style/Theme">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/image_exp_detail_all_category"
        android:layout_toLeftOf="@+id/linearLayout3"
        android:layout_toRightOf="@+id/image_exp_detail_all_category"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_date_exp_detail_all_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView15"
            android:paddingLeft="40dp"
            android:text="00.00.0000"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/linearLayout2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_name_exp_detail_summ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="0.00"
            android:textColor="#fffb00"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_weight="0"
            android:text="@string/grn"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>