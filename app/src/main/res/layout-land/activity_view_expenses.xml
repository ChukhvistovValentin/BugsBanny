<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@raw/back_fon5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.valentin.bugsbanny.ActivityViewExpenses">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/choose_exp"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_toLeftOf="@+id/button_view_detail"
        android:layout_toStartOf="@+id/button_view_detail"
        android:theme="@android:style/Theme" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_date_begin"
        android:textSize="20dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/switch_view_all_category"
        android:layout_alignRight="@+id/switch_view_all_category"
        android:layout_alignEnd="@+id/switch_view_all_category"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/datePicker_category"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/choose_date_end"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_view_detail"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignTop="@+id/spinner_category"
        android:drawableLeft="@mipmap/view_exp"
        android:text="@string/view_exp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/spinner_category" />

    <!--<DatePicker-->
    <!--android:id="@+id/datePicker_category_end"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignEnd="@+id/textView6"-->
    <!--android:layout_alignRight="@+id/textView6"-->
    <!--android:layout_below="@+id/textView6" />-->
    <Button
        android:id="@+id/datePicker_category_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:text="00.00.0000"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24dp"
        android:textStyle="bold" />

    <!--<DatePicker-->
    <!--android:id="@+id/datePicker_category"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_alignParentLeft="true"-->
    <!--android:layout_alignParentStart="true" />-->

    <Button
        android:id="@+id/datePicker_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00.00.0000"
        android:textColor="#0800ff"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:id="@+id/switch_view_all_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner_category"
        android:paddingTop="15dp"
        android:text="@string/view_exp_all" />

</RelativeLayout>
